@model IEnumerable<ShoppingWeb.Models.ManageUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>網站會員管理</h2>

@if (ViewBag != null)
{ 
    @Html.Label("info", (string)ViewBag.ResultMessage, new { @class = "text-info" })
    @Html.Label("info", (string)ViewBag.DeleteMessage, new { @class = "text-info" })
}

<table class="table">
<tr>
    <th>
        @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Email)
    </th>
    <th>操作</th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })

            @using (@Html.BeginForm("Delete", "ManageUser", FormMethod.Post, new { onsubmit = "return runScript();" }))
            {     
                @Html.Hidden("Id", item.Id)
                <input type="submit" value="刪除" class="btn btn-default" />
            }


        </td>



    </tr>
}

</table>

@section scripts
{
    <script>
        function runScript() {
            if (confirm("你確定要刪除嗎？")) {
                return true;
            }
            else {
                return false;
            }

        }
    </script>
}