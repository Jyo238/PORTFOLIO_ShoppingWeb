@model ShoppingWeb.Models.ViewModel.ManagerAndMemberViewModel
@{
    ViewBag.Title = "會員管理";
    var userId = User.Identity.Name;

}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>



    






<div>
   



    <h3>您的個人資料</h3>

    <div class="display-field">
       
        <img class="fb-image-profile thumbnail" src="@Url.Content(@Model.ManageUsers.ImgUrl+"?" + DateTime.Now.ToString("yyyyMMddhhmmss"))" width=" 250" height="250" id="@Model.ManageUsers.ImgUrl"/>
    </div>

   
    @Html.ActionLink("編輯", "Edit", null,  new { @class = "btn btn-default" })
    <script type="javascript">window.location=window.location</script>
    <hr />
    <dl class="dl-horizontal">
        @*<dt><img src="@Url.Content(@Model.ManageUsers.ImgUrl)" width="50" height="50" /></dt>*@

        <dt>@Html.DisplayNameFor(model => Model.ManageUsers.NickName):</dt>
        <dd>@Html.DisplayFor(model => Model.ManageUsers.NickName)</dd>

        <dt>@Html.DisplayNameFor(model => Model.ManageUsers.Email):</dt>
        <dd>@Html.DisplayFor(model => Model.ManageUsers.Email)</dd>

        <dt>密碼:</dt>
        <dd>
            [
            @if (Model.IndexViewModels.HasPassword)
            {
                @Html.ActionLink("變更密碼", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("建立", "SetPassword")
            }
            ]
        </dd>
        <dt>外部登入:</dt>
        <dd>
            @Model.IndexViewModels.Logins.Count [
            @Html.ActionLink("管理", "ManageLogins") ]
        </dd>
