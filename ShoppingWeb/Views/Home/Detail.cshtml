@model ShoppingWeb.Models.Product   
          

@{
    ViewBag.Title = "Details";


    var commentlist = new List<ShoppingWeb.Models.ProductCommet>();
    decimal starrating = ShoppingWeb.Models.Board.StarGet(this.Model.Id);
    var staritem = ShoppingWeb.Models.Board.StarC(this.Model.Id);
    int grade =5;
    string[] btnarray = { "progress-bar progress-bar-danger", "progress-bar progress-bar-danger", "progress-bar progress-bar-warning", "progress-bar progress-bar-info", "progress-bar progress-bar-primary", "progress-bar progress-bar-success" };
    using (ShoppingWeb.Models.CartsEntities db = new ShoppingWeb.Models.CartsEntities())
    {
        commentlist = (from s in db.ProductCommets where s.ProductId == this.Model.Id select s).ToList();    
        
    }
    
    
    
}

<h2>商品資訊</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>

        </dt>

        <dd>
            <img src="@this.Model.DefaultImageURL" width="400" />
        </dd>

